@model IEnumerable<Chieu4_Buoi3_TranHoangKhai_2011060423.Models.Sach>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Index</h2>
<table border="1px">
    <tr>
        <th>Mã sách</th>
        <th>Mã loại </th>
        <th>Tên Sách </th>
        <th>Hình </th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.masach</td>
            <td>@item.maloai</td>
            <td>@item.tensach</td>
            <td><img src="@item.hinh" alt="Alternate Text" width="100" height="150" /></td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.maloai }) |
                @Html.ActionLink("Detail", "Detail", new { id = item.maloai }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.maloai })
            </td>
        </tr>
    }
</table>
@Html.ActionLink("Create", "Create", "Sach")